<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Links">
    <ScrollView>
        <StackLayout BackgroundColor="{DynamicResource darkBlue}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Style="{DynamicResource title}" TextColor="{DynamicResource yellow}" Grid.Column="0" Text="Useful links to get you on your way"/>
                <Image Grid.Column="1" x:Name="Shield"  Style="{DynamicResource hhsshield}"/>
            </Grid>

            <Button Style="{DynamicResource buttonStyle}" x:Name="GAW"  Text="Government Apprenticship Website" Clicked="Apprenticeship_help" />
            <Button Style="{DynamicResource buttonStyle}" x:Name="HETA"  Text="Heta" Clicked="heta_clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>